<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f5a9"
    tools:context=".BusquedaLibros">
    <LinearLayout
        android:id="@+id/layout_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/busqueda_libros"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Busqueda:"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="22dp"/>
        <SearchView
            android:id="@+id/SearchView_libros"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_seven"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/layout_six"
        android:background="#f2f5a9">

    </LinearLayout>

</RelativeLayout>